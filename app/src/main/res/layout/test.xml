<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="TextView"
        android:layout_width="232dp"
        android:layout_height="55dp"
        tools:layout_editor_absoluteY="30dp"
        tools:layout_editor_absoluteX="89dp" android:id="@+id/textView"/>
    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="113dp"
        tools:layout_editor_absoluteX="232dp" android:id="@+id/button"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="373dp"
        android:layout_height="99dp"
        tools:layout_editor_absoluteX="21dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button">

        <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="24dp"
            android:id="@+id/button2"
            app:layout_constraintEnd_toStartOf="@+id/button3"
            android:layout_marginEnd="36dp" android:layout_marginRight="36dp"/>
        <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="24dp"
            tools:layout_editor_absoluteX="191dp" android:id="@+id/button3"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>